{
  "manifest_version": 3,
  "name": "Alcopa Price Comparison",
  "version": "1.0.0",
  "description": "Comparez les prix des v√©hicules Alcopa avec LeBonCoin et La Centrale pour maximiser vos marges",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://www.alcopa-auction.fr/*",
    "https://www.leboncoin.fr/*",
    "https://www.lacentrale.fr/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.alcopa-auction.fr/salle-de-vente-encheres/*",
        "https://www.alcopa-auction.fr/voiture-occasion/*",
        "https://www.alcopa-auction.fr/utilitaire-occasion/*",
        "https://www.alcopa-auction.fr/vente-encheres-en-ligne/*"
      ],
      "js": [
        "utils/constants.js",
        "content/ui-injector.js",
        "content/alcopa-content.js"
      ],
      "css": [
        "styles/icons.css",
        "styles/results-modal.css"
      ],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },

  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*"
      ],
      "matches": [
        "https://www.alcopa-auction.fr/*"
      ]
    }
  ]
}
